<!-- Page content-->
<div class="container">
    <div class="text-center mt-5">
        <h1>A Bootstrap 5 Starter Template</h1>
        <p class="lead">A complete project boilerplate built with Bootstrap</p>
        <p>Bootstrap v5.1.3</p>
    </div>

    {% if session.notification %}
        <div class="row">
            <div class="col-12">
                <div class="alert alert-{{ session.notification.result }}" role="alert">
                    {{ session.notification.message }}
                </div>
            </div>
        </div>
    {% endif %}

    <form id="" method="GET" action="index.php">
        <div class="row mb-5">
            <div class="col-6">
                <input type="text" class="form-control" name="search" value="" placeholder="Mot clÃ©....">
            </div>
            <div class="col-6">
                <button type="submit" id="submit" value="recherche" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>
    
    <div class="row">
        {% for articles in listArticles %}
            <div class="col-6 mb-4">
                <div class="card">
                    <img src="img/{{ articles.getId }}.jpg" style="max-width: 200px;" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ articles.getTitre }}</h5>
                        <p class="card-text">{{ articles.getTexte }}</p>
                        <a href="#" class="btn btn-info">{{ articles.getDate }}</a>
                        {% if sid == true %}
                        <a href="articles.php?id={{ articles.getId }}" class="btn btn-warning">Modifier</a>
                        <a href="detailArticles.php?id={{ articles.getId }}" class="btn btn-success">Afficher</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <nav aria-label="navigation">
        <ul class="pagination justify-content-center">
            <ul class="pagination pagination-lg">
                {% for i in 1..nbPages %}
                    {% if get.page == i %}
                    <li class="page-item active" aria-current="page"><span class="page-link">{{ i }}</span></li>
                    {% else %}
                    <li class="page-item"><a class="page-link" href="index.php?page={{ i }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </ul>
    </nav>
    </div>